datasource db {
  provider = "postgresql"
  url      = env("DB_DEPLOY")
}

model User {
  id String @id @default(uuid())
  name String
  surname String
  email String @unique
  whatsapp String
  password String
  recoveryKey String?
}

model NewsLetter {
  id String @id @default(uuid())
  email String @unique
}

model Contact {
  id  Int @id @default(autoincrement())
  name String
  email String
  message String
  whatsapp String
  completed Boolean
}